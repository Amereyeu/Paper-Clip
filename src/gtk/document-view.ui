<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="HiddenScribeDocumentView" parent="AdwBin">
    <child>
      <object class="AdwClamp">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>

            <child>
              <object class="AdwPreferencesGroup" id="properties_group">
                <property name="title" translatable="yes">Editable Properties</property>
                <child>
                  <object class="HiddenScribeEntryRow" id="title_row">
                    <property name="title" translatable="yes">Title</property>
                    <property name="property-name">title</property>
                  </object>
                </child>

                <child>
                  <object class="HiddenScribeEntryRow" id="author_row">
                    <property name="title" translatable="yes">Author</property>
                    <property name="property-name">author</property>
                  </object>
                </child>

                <child>
                  <object class="HiddenScribeEntryRow" id="creator_row">
                    <property name="title" translatable="yes">Creator</property>
                    <property name="property-name">creator</property>
                  </object>
                </child>

                <child>
                  <object class="HiddenScribeEntryRow" id="subject_row">
                    <property name="title" translatable="yes">Subject</property>
                    <property name="property-name">subject</property>
                  </object>
                </child>

                <child>
                  <object class="HiddenScribeEntryRow" id="producer_row">
                    <property name="title" translatable="yes">Producer</property>
                    <property name="property-name">producer</property>
                  </object>
                </child>

                <child>
                  <object class="HiddenScribeDateRow" id="creation_row">
                    <property name="title" translatable="yes">Creation Date</property>
                    <property name="property-name">creation-date</property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Keywords</property>

                <child type="header-suffix">
                  <object class="GtkButton" id="add_button">
                    <property name="icon-name">list-add-symbolic</property>
                    <property name="tooltip-text">Add a keyword</property>
                    <signal name="clicked" handler="on_add_button_clicked"></signal>
                  </object>
                </child>

                <child>
                  <object class="GtkListBox" id="keyword_box">
                    <style>
                      <class name="boxed-list"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <!-- Shortcuts -->
    <child>
      <object class="GtkShortcutController">
        <child>
          <object class="GtkShortcut">
            <property name="trigger">&lt;Control&gt;s</property>
            <property name="action">action(win.save)</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
